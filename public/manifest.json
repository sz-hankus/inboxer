{
  "name": "Inboxer",
  "description": "A temporary email inbox right in your browser",
  "version": "1.0.0",
  "manifest_version": 2,
  "homepage_url": "https://github.com/sz-hankus/inboxer",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Inboxer",
    "default_icon": {
      "48": "favicon.ico",
      "96": "favicon.ico"
    }
  },
  "icons": {
    "48": "favicon.ico",
    "96": "favicon.ico"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ]
}